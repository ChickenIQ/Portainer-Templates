{
    "type": 2,
    "title": "Terraria",
    "description": "Terraria server (amd64 only)",
    "categories": ["Games", "amd64"],
    "platform": "linux",
    "logo": "https://raw.githubusercontent.com/ChickenIQ/portainer-templates/main/logos/terraria.png",
    "repository": {
        "url": "https://github.com/ChickenIQ/portainer-templates",
        "stackfile": "stacks/games/terraria.yml"
    },
    "env": [
        {
            "label": "Node Hostname",
            "name": "NODE_HOSTNAME",
            "default": "$NODE_HOSTNAME"
        },
        {
            "label": "World Name",
            "name": "WORLD_NAME",
            "default": "World"
        },
        {
            "label": "MOTD",
            "name": "MOTD",
            "default": "Welcome to $USERNAME's Terraria server!"
        },
        {
            "label": "Port",
            "name": "PORT",
            "default": "7777"
        },
        {
            "label": "Server Password",
            "name": "PASSWORD"
        },
        {
            "label": "Seed",
            "name": "SEED"
        },
        {
            "label": "Max Players",
            "name": "MAX_PLAYERS",
            "default": "16"
        },
        {
            "label": "World Size",
            "name": "WORLD_SIZE",
            "select": [
                {
                    "text": "Small",
                    "value": "1"
                },
                {
                    "text": "Medium",
                    "value": "2"
                },
                {
                    "text": "Large",
                    "value": "3",
                    "default": "true"
                }
            ]
        },
        {
            "label": "Difficulty",
            "name": "DIFFICULTY",
            "select": [
                {
                    "text": "Normal",
                    "value": "0",
                    "default": "true"
                },
                {
                    "text": "Expert",
                    "value": "1"
                },
                {
                    "text": "Master",
                    "value": "2"
                },
                {
                    "text": "Journey",
                    "value": "3"
                }
            ]
        },
        {
            "label": "Allow Cheats",
            "name": "ALLOW_CHEATS",
            "select": [
                {
                    "text": "False",
                    "value": "1",
                    "default": "true"
                },
                {
                    "text": "True",
                    "value": "0"
                }
            ]
        }
    ]
}
